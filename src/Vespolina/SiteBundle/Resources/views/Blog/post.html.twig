{% extends "VespolinaSiteBundle::layout.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row-fluid">
            <div class="span12">
                <h1>{{ post.title }}</h1>
            </div>
        </div>
        {% if cmf_prev(post) or cmf_next(post) %}
            <div class="row-fluid">
                <div class="span6">
                    {% if cmf_prev(post) %}
                        <a href="{{ path(cmf_prev(post)) }}">&lt;&lt; {{ cmf_prev(post).title }}</a>
                    {% endif %}
                </div>
                <div class="span6" style="text-align: right">
                    {% if cmf_next(post) %}
                        <a href="{{ path(cmf_next(post)) }}">{{ cmf_next(post).title }} &gt;&gt;</a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
        <div class="row-fluid">
            <div class="span6">
                <p><i>{{ 'Posted on: %date%'|trans({ '%date%' : post.date.format('l d F, Y') }) }}</i></p>
            </div>
            <div class="span6" style="text-align: right">
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                {{ post.body|raw }}
            </div>
        </div>
    </div>
{% endblock %}

