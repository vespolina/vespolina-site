<div class="post">
    <div class="row-fluid">
        <div class="span9 post-title">
            <a href="{{ path(post) }}">{{ post.title }}</a>
        </div>
        <div class="span3" style="text-align: right">
            <i>{{ post.date.format('d-m-Y') }}</i>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12" style="margin: 10px 0px 10px 0px">
            {{ post.bodyPreview|raw }}
        </div>
    </div>
</div>