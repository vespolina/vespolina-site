<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Vespolina - An OpenSource, decoupled Ecommerce framework{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Vepsolina">

    <!-- Le styles -->
    <link href="{{ asset('bundles/vespolinasite/css/bootstrap/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vespolinasite/css/bootstrap/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vespolinasite/css/app.css') }}" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ asset('js/html5shiv.js') }}"></script>
    <![endif]-->
</head>

<body>

    <section role="heading">
        <div class="container">
            <a href="/" class="logo">
                <img src="{{ asset('bundles/vespolinasite/img/logo.png') }}" title="{{ 'Homepage'|trans }}" />
            </a>
        </div>
    </section>

    <section role="navigation">
        <div class="container">
            {{ knp_menu_render('main', {'template' : 'VespolinaSiteBundle:Menu:main.html.twig', 'depth': 1 }) }}
        </div>
    </section>

    <section role="content"{% if isHomepage is defined and isHomepage %}class="home"{% endif %}>

        {% block content %}No content defined{% endblock %}

    </section> <!-- /container -->

    <footer>
        <div class="container">
            <p>&copy; Vespolina 2013</p>
        </div>
    </footer>


    <script src="{{ asset('bundles/sonatajquery/jquery-1.8.3.js') }}"></script>
    <script src="{{ asset('bundles/vespolinasite/js/bootstrap/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/vespolinasite/js/vespolina.js') }}"></script>
</body>
</html>